{
  "biome.enabled": true,
  "css.lint.propertyIgnoredDueToDisplay": "ignore",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  // "editor.inlineSuggest.enabled": true,
  // "editor.linkedEditing": true,
  // "editor.rulers": [
  // 	{
  // 		"column": 80
  // 	}
  // ],
  "explorer.compactFolders": true,
  // file nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    ".env": ".env.zolvecare.production, .gitignore, .npmrc, .nvmrc, .cursorrules, .windsurfrules, .tool-versions, .prettierignore, .easignore, .python-version, doppler.yaml, uv.lock",
    "README.md": "PYREADME.md, README.md, CLAUDE.md"
  },
  "files.associations": {
    "*.css": "tailwindcss",
    // ".cursorrules": "markdown",
    ".cursorrules": "shellscript",
    "*.module.css": "postcss",
    "**/typescript/*.json": "jsonc",
    "**/tsconfig.json": "jsonc",
    "turbo.json": "jsonc",
    "*.mdx": "mdx",
    "*.json": "jsonc",
    "package.json": "json"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // "[css]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/nativeuialt/global.css"
  ],
  "markdownlint.config": {
    "MD033": false,
    "MD030": false
  },
  "search.exclude": {
    "node_modules": true,
    "**/build": true,
    "**/.cache/*": true,
    "**/.contentlayer/*": true,
    "**/coverage/*": true,
    "**/dist": true,
    "**/.expo/*": true,
    "**/_generated": true,
    "**/.next": true,
    "**/node_modules": true,
    "**/*.svg": true,
    "**/.turbo": true,
    "**/.tsbuildinfo": true,
    "**/.velite": true,
    "**/.venv": true,
    "**/.mastra": true,
    "bun.lock": true
  },
  "tailwindCSS.experimental.configFile": "./packages/webui/src/styles/globals.css",
  "tailwindCSS.experimental.classRegex": [
    [
      "tv\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]",
      "twc\\.[^`]+`([^`]*)`",
      "twc\\(.*?\\).*?`([^`]*)",
      ["twc\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
      ["twc\\(.*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
      "twx\\.[^`]+`([^`]*)`",
      "twx\\(.*?\\).*?`([^`]*)",
      ["twx\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
      ["twx\\(.*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ]
  ],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "next/router.d.ts",
    "next/dist/client/router.d.ts"
  ],
  "typescript.surveys.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "postman.settings.dotenv-detection-notification-visibility": false,
  "kiroAgent.configureMCP": "Disabled"
}
